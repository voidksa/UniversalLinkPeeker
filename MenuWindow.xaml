<Window x:Class="UniversalLinkPeeker.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="100" Width="180"
        WindowStyle="None" ResizeMode="NoResize"
        ShowInTaskbar="False" Topmost="True"
        AllowsTransparency="True" Background="Transparent"
        Deactivated="Window_Deactivated">
    
    <Window.Resources>
        
    </Window.Resources>

    <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="8" BorderBrush="{DynamicResource WindowBorderBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="270" Opacity="0.3"/>
        </Border.Effect>
        <StackPanel Margin="4">
            <Button Style="{StaticResource MenuButtonStyle}" Click="Settings_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Settings" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Separator Background="{DynamicResource SeparatorBrush}" Margin="0,4"/>

            <Button Style="{StaticResource MenuButtonStyle}" Click="Exit_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Exit" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Border>
</Window>
