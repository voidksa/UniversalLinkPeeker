<Window x:Class="UniversalLinkPeeker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Link Peeker" Height="400" Width="500"
        WindowStyle="None" ResizeMode="NoResize"
        ShowInTaskbar="False" Topmost="True"
        ShowActivated="False"
        AllowsTransparency="True" Background="Transparent"
        Visibility="Hidden">
    <Border CornerRadius="10" Background="White" BorderBrush="#DDDDDD" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <wv2:WebView2 Name="webView" />
        </Grid>
    </Border>
</Window>
