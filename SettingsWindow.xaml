<Window x:Class="UniversalLinkPeeker.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="450" Width="320"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="12" BorderBrush="{DynamicResource WindowBorderBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Direction="270" Opacity="0.4"/>
        </Border.Effect>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Settings" FontSize="20" FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Content -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Trigger Key" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <RadioButton Name="ShiftRadio" Content="Shift" Checked="TriggerKey_Checked"/>
                    <RadioButton Name="CtrlRadio" Content="Ctrl" Checked="TriggerKey_Checked"/>
                    <RadioButton Name="AltRadio" Content="Alt" Checked="TriggerKey_Checked"/>
                </StackPanel>

                <TextBlock Text="Theme" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <RadioButton Name="AutoThemeRadio" Content="Auto" Checked="Theme_Checked"/>
                    <RadioButton Name="DarkThemeRadio" Content="Dark" Checked="Theme_Checked"/>
                    <RadioButton Name="LightThemeRadio" Content="Light" Checked="Theme_Checked"/>
                </StackPanel>
                
                <TextBlock Text="System" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <CheckBox Name="RunOnStartupCheck" Content="Run on Startup" 
                          Foreground="{DynamicResource PrimaryTextBrush}" 
                          Checked="RunOnStartup_Checked" Unchecked="RunOnStartup_Unchecked"
                          Margin="0,0,0,20"/>
                
                <TextBlock Text="About" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="Universal Link Peeker v1.2.0" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,5"/>
                <TextBlock Text="Created by voidksa" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,10"/>
                
                <Button Style="{StaticResource MenuButtonStyle}" Click="GitHub_Click" HorizontalAlignment="Left" Padding="0">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" 
                              Fill="{DynamicResource PrimaryTextBrush}" Stretch="Uniform" Width="20" Height="20" Margin="0,0,8,0"/>
                        <TextBlock Text="Visit GitHub Repository" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Footer -->
            <Button Grid.Row="2" Content="Close" Click="Close_Click" HorizontalAlignment="Right" Width="80" Height="30" Background="#8AB4F8" Foreground="#202124" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>
